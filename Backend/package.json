    "cors": "^2.8.5",
    "joi": "^17.11.0",
    "openai": "^4.0.0",
    "nodemailer": "^6.9.0",
    "node-cron": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "nodemon": "^3.0.2",
    "jest": "^29.0.0",
    "supertest": "^6.3.0"
